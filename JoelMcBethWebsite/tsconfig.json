{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "module": "none",
    "allowJs": false,
    "lib": [
      "es6",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
